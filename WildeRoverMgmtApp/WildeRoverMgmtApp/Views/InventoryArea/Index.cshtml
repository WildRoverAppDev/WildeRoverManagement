@model IEnumerable<WildeRoverMgmtApp.Models.InventoryArea>

@{
    ViewData["Title"] = "Index";
}

<h2>Inventory Areas</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<hr />
<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>
                <div class="col-md-6">
                    @Html.DisplayNameFor(model => model.Name)
                </div>                
            </th>
            <th>
                <div class="col-md-6">
                    @Html.DisplayNameFor(model => model.House)
                </div>                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var area in Model)
        {
            <tr>
                <td>
                    <div class="col-md-6">
                        <a class="btn" style="text-decoration:none" asp-action="Details" asp-route-id="@area.InventoryAreaId">
                            @Html.DisplayFor(m => area.Name)
                        </a>
                    </div>
                </td>
                <td>
                    <div class="col-md-6">
                        <a class="btn" style="text-decoration:none">
                            @Html.DisplayFor(m => area.House)
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
