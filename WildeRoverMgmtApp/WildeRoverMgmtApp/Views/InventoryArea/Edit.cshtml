@model WildeRoverMgmtApp.Models.InventoryAreaEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>
    @Html.DisplayFor(model => model.InventoryArea.Name)
</h2>

@using (Html.BeginForm(FormMethod.Post))
{
    <table class="table-striped">
        @Html.HiddenFor(model => Model.InventoryAreaId)
        <tbody>
            @for(int i = 0; i < Model.SlotList.Count; i++)
            {
                @Html.HiddenFor(m => m.SlotList[i].InventorySlotId);
                <tr>
                    <td>
                        @Html.DisplayFor(m => m.SlotList[i].Slot.Slot)
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.SlotList[i].WildeRoverItemId, new SelectList(Model.ItemList, "Value", "Text"))
                        @Html.HiddenFor(m => m.SlotList[i].WildeRoverItemId)
                    </td>
                    <td>
                        <a asp-controller="InventoryArea" asp-action="RemoveSlot" asp-route-slotId="@Model.SlotList[i].InventorySlotId" asp-route-areaId="@Model.InventoryAreaId">
                            X
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-controller="InventoryArea" asp-action="AddNewSlot" asp-route-id="@Model.InventoryAreaId">
            + Add New Slot
        </a>
    </p>
    <p>
        <input type="submit" value="SAVE" formaction="/InventoryArea/EditSave"/>
        <input type="submit" value="CANCEL" formaction="/InventoryArea/EditCancel" />
    </p>
}


