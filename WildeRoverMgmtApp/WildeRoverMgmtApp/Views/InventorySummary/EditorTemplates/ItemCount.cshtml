
@*
   Editor Template for ItemCount
*@

@using WildeRoverMgmtApp.Models
@model ItemCount

<tr>
    <td>
        <div class="col-md-10">
            @Html.HiddenFor(model => model.ItemCountId)
            <a class="btn" asp-controller="WildeRoverItems" asp-action="Details" asp-route-id="@Model.Item.WildeRoverItemId">
                @Html.DisplayFor(model => model.Item.Name)
            </a>            
        </div>        
    </td>
    <td>
        <div class="col-md-2">
            <a class="btn">
                @Html.DisplayFor(model => model.Count)
            </a>
        </div>
    </td>
</tr>