@model WildeRoverMgmtApp.Models.OrderSubmitViewModel

@{
    ViewData["Title"] = "Submit";
}


<style type="text/css">
    td {
        padding: 0 10px 0 10px;
    }

    th {
        padding: 0 10px 0 10px;
    }
</style>

<h2>Order Submit</h2>

<h3>
    @Html.DisplayFor(model => model.Order.Date)
</h3>

<hr />

@using (Html.BeginForm("Submit", "OrderSummary", FormMethod.Post))
{
    <div>
        @Html.HiddenFor(model => model.OrderSummaryId)
        @Html.HiddenFor(model => model.Total)
        @foreach (var kvp in Model.OrderItems)
        {
            <div class="container">
                <h3>
                    <a href="#@kvp.Key.VendorId" data-toggle="collapse">
                        @Html.DisplayFor(model => kvp.Key.Name)
                        <span class="caret"></span>
                    </a>                    
                </h3>
                <div id="@kvp.Key.VendorId" class="collapse">
                    <table class="table table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    <div class="col-md-10"></div>
                                </th>
                                <th>
                                    <div class="col-md-2">
                                        Count
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="childtable">
                            @Html.EditorFor(model => kvp.Value)
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
    <p>
        <dl class="dl">
            <dt>Total: </dt>
            <dd>
                <h3>@Html.DisplayFor(model => model.Total)</h3>
            </dd>
        </dl>
    </p>
    <div class="btn-group">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#popupModal">Submit</button>
        <a class="btn btn-info" href="javascript:history.go(-1)">Back</a>
    </div>

    <!--  Modal Popup Dialog-->
    <div class="modal fade" id="popupModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Submit</h3>
                    <h4 class="modal-title">
                        @Html.DisplayFor(m => m.Order.Date)
                    </h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to Submit?</p>
                </div>
                <div class="modal-footer">
                    <div btn-group>
                        <input type="submit" class="btn btn-success" value="Yes" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}